{# templates/tree/list_environments.html.twig #}
{# @var environments \App\Entity\Environment[] #}
{% extends 'tree/index.html.twig' %}
{% block treeContent %}
    <div class="container">
        <div class="card justify-content-center">
            <h5 class="card-header bg-dark text-white">
                Environment list
                <a href="{{ path('environmentEdit') }}" class="btn btn-success float-right">New</a>
            </h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover ">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Soil quality</th>
                            <th>Altitude</th>
                            <th>Wind direction</th>
                            <th>Wind strength</th>
                            <th>Rainfall</th>
                            <th>Filename</th>
                            <th>Edit</th>
                            {% if is_granted('ROLE_ADMIN') %}
                                <th>Delete</th>
                            {% endif %}
                        </tr>
                        </thead>
                        <tbody>
                        {% for env in environments %}
                            <tr>
                                <td>{{ env.environmentId }}</td>
                                <td>{{ env.environmentFileName }}</td>
                                <td>{{ env.environmentSoilQuality }}</td>
                                <td>{{ env.environmentAltitude }}</td>
                                <td>{{ env.environmentWindDirection }}</td>
                                <td>{{ env.environmentWindStrength }}</td>
                                <td>{{ env.environmentRainfall }}</td>
                                <td>{{ env.environmentFileName }}</td>
                                <td>
                                    <a class="btn btn-info" href="{{ path('environmentEdit', { 'environmentId': env.environmentId }) }}">EDIT</a>
                                </td>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <td>
                                        <a class="btn btn-danger"
                                           href="{{ path('environmentDelete', {'environmentId': env.environmentId}) }}">Delete</a>
                                    </td>
                                {% endif %}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}